.box {
  min-height: 1110rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f4f4f4;
  font-family: cursive;
}
/* 顶部图片 */
.header image {
  width: 100%;
  border-radius: 20rpx;
  display: block;
}
/* 一起去度假 */
.pic {
  margin: 20rpx 0;
  display: flex;
  padding: 400rpx 0 20rpx 0;
  background-color: white;
  position: relative;
}
/* 图片 */
.pic image {
  display: block;
  height: 220rpx;
  margin: 0 16rpx;
  border-radius: 20rpx;
}
/* 飞机图标 */
.pic .plane {
  display: block;
  height: 60rpx;
  width: 60rpx;
  position: absolute;
  top: 18rpx;
  left: 450rpx;
}
/* 标题 */
.pic .txt {
  position: absolute;
  font-weight: bold;
  font-size: 50rpx;
  top: 20rpx;
  left: 210rpx;
  color: #7BB6B4;
}
/* 度假文字 */
.pic .word {
  position: absolute;
  text-indent: 2em;
  font-size: 35rpx;
  padding: 0 20rpx;
  color: #788ab2;
  top: 85rpx;
  left: 20rpx;
}

.suggest {
  color: white;
  text-align: center;
  font-size: 50rpx;
  margin: 40rpx 0;
  padding: 20rpx 0;
  border-radius: 60rpx;
  background-color: #00C597;
  position: relative;
}

.suggest .icon2 {
  display: block;
  height: 50rpx;
  width: 50rpx;
  position: absolute;
  top: 20rpx;
  left: 460rpx;
}

.suggest .icon1 {
  display: block;
  height: 50rpx;
  width: 50rpx;
  position: absolute;
  top: 20rpx;
  left: 200rpx;
}

.suggestHover {
  background-color: rgb(41, 197, 151, 0.8);
}

.suggest::before {
  content: "";
  display: block;
  height: 100%;
  width: 100%;
  border: 3px dotted #00C597;
  position: absolute;
  top: 0;
  left: 0;
  box-sizing: border-box;
  border-radius: 100rpx;
  transform: scale(1.03, 1.2);
}

/* 景点介绍 */
.scenery {
  height: 300rpx;
  display: flex;
  padding: 20rpx;
  margin: 15rpx 0;
  box-sizing: border-box;
  border-radius: 20rpx;
  background-color: white;
}

.scenery .img {
  display: block;
  height: 220rpx;
  width: 220rpx;
  border-radius: 20rpx;
}

.scenery .info {
  margin-left: 20rpx;
  width: 430rpx;
  position: relative;
}
/* 名字 */
.scenery .info .name {
  display: block;
  margin-top: -10rpx;
  font-size: 40rpx;
  font-weight: bold;
}
/* 评级 */
.scenery .info .level {
  margin-left: 15rpx;
  margin-top: -10rpx;
  color: #27a346;
  padding: 0 8rpx;
  background-color: #eef8f7;
}

/* 评分星星 */
.scenery .info .mark{
  display: flex;
  /* 水平居中 */
  justify-content: center;
  /* 竖直居中 */
  align-items: center;
  height: 35rpx;
  width: 35rpx;
  margin: 2rpx;
  text-align: center;
  background-color: #fa8505;
}

.scenery .info .mark image {
  height: 25rpx;
  width: 25rpx;
}

.scenery .info .special {
  margin: 10rpx 0 10rpx 0;
  color: #7BB6B4;
  font-weight: bold;
}

.scenery .info .address {
  margin-top: 10rpx;
  color: gray;
}