text {
  font-family: cursive;
}

.box {
  /* 导航栏多128rpx */
  min-height: 1238rpx; 
  background-color: #f7f7f7;
  
}

.front {
  height: 378rpx;
  background-color: #5e84f6;
  background-image: url("https://s1.ax1x.com/2023/09/02/pPB3eIA.jpg");
  border-radius: 0 0 50rpx 50rpx;
  position: relative;
}

.front image {
  display: block;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  position: absolute;
  top: 178rpx;
  left: 280rpx;
  z-index: 2;
}

/* 用户表单信息 */
.front .info {
  height: 650rpx;
  width: 700rpx;
  background-color: white;
  position: absolute;
  top: 278rpx;
  left: 26rpx;
  border-radius: 30rpx;
  padding-bottom: 20rpx;
}

.front .info .msg {
  display: flex;
  margin-top: 150rpx;
  padding: 0 40rpx;
  flex-direction: column;
}

.front .info .msg .name{
  display: flex;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #dbd9d9;
}

.front .info .msg .name text {
  font-size: 35rpx;
  margin-top: 5rpx;
}

.front .info .msg .name input {
  display: block;
  color: rgb(54, 54, 54);
  font-size: 35rpx;
  width: 550rpx;
  padding-left: 120rpx;
  box-sizing: border-box;
  /* border: 1px solid red; */
}

.front .info .msg .sex{
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1px solid #dbd9d9;
}

.front .info .msg .sex text {
  font-size: 35rpx;
  margin-top: 5rpx;
}

.front .info .msg .birthday{
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1px solid #dbd9d9;
}

.front .info .msg .birthday text {
  font-size: 35rpx;
  margin-top: 5rpx;
}

.front .info .msg .birthday input {
  display: block;
  width: 480rpx;
  padding-left: 120rpx;
  box-sizing: border-box;
}

/* picker */
.birthday image {
  display: block;
  height: 30rpx;
  width: 30rpx;
  position: absolute;
  top: 370rpx;
  left: 600rpx;
}

.front .info .msg .sign{
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1px solid #dbd9d9;
}

.front .info .msg .sign text {
  font-size: 35rpx;
  margin-top: 5rpx;
}

.front .info .msg .sign input {
  display: block;
  color: rgb(54, 54, 54);
  font-size: 35rpx;
  width: 480rpx;
  padding-left: 50rpx;
  box-sizing: border-box;
  /* border: 1px solid red; */
}

.front .info .msg .store{
  display: flex;
  padding: 30rpx 0;
  position: relative;
}

.front .info .msg .store text {
  font-size: 35rpx;
  margin-top: 5rpx;
}

.front .info .msg .store input {
  display: block;
  color: rgb(54, 54, 54);
  font-size: 35rpx;
  width: 400rpx;
  padding-left: 50rpx;
  box-sizing: border-box;
}

.front .info .msg .store image {
  display: block;
  height: 30rpx;
  width: 30rpx;
  position: absolute;
  top: 38rpx;
  left: 560rpx;
}

/* 没选中时候的样式 */
.front .info radio-group radio .wx-radio-input{
  border: 1px solid rgb(209, 209, 209);
  height: 30rpx;
  width: 30rpx;
  color: gray;
}
/* 选中时的样式 */
.front .info radio-group radio .wx-radio-input.wx-radio-input-checked{
  border: 1px solid rgb(209, 209, 209);
  background-color: #5e84f6;
  height: 30rpx;
  width: 30rpx;
}
/* 对勾 */
.front .info radio-group radio .wx-radio-input.wx-radio-input-checked::before{
  border-radius: 50%;
  width: 30rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 30rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 30rpx;
  text-align: center;
  font-size: 30rpx; /* 对勾大小 30rpx */
}

radio text {
  color: rgb(159, 159, 159);
  margin-left: 50rpx;
}

